<%- include('partials/header') %>

<body>
    <%- include('partials/navbar') %>
    <br>
    <div class="container">
        <br>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/resposta">
            <h3>Responda</h3>
            <label>Resposta: </label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>" >
            <br>
            <button type="submit" class="btn btn-warning">Responder</button>
        </form>
        <hr>
        <h3>Resposta</h3>
        <br>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>            
        <% }) %>
    </div>
    <br>
</body>

<%- include('partials/footer') %>